<!doctype html>
<html lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>NESCAUM DataServices</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="bootstrap-4.0.0-alpha.6-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
  </head>
  <body>
    <nav class="navbar navbar-light bg-faded" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">NESCAUM DataServices</a>
          <span class='login-info navbar-text'>
            <% if current_user %>
              <span> Hi, <%= current_user.name %></span>
              <a href="<%= Paths.sign_out_path %>"> Sign Out </a>
            <% else %>
              <a href="<%= Paths.sign_in_path %>"> Sign In </a>
            <% end %>
          </span>
        </div>
      </div>
    </nav>
    <div class='container'>
      <%= yield %>
    </div>

    <hr>

    <footer>
      <div class='container'>
        <p>&copy; NESCAUM DataServices 2017</p>
      </div>
    </footer>
    <script src="bootstrap-4.0.0-alpha.6-dist/js/bootstrap.min.js">
    <script src="js/main.js"></script>
  </body>
</html>
